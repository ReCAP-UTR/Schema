{
  "packages": {
    ".": {
      "release-type": "simple",
      "package-name": "arg-services"
    },
    "src/python": {
      "release-type": "python",
      "package-name": "arg-services-python"
    },
    "src/typescript": {
      "release-type": "node",
      "package-name": "arg-services-typescript"
    },
    "src/java": {
      "release-type": "java",
      "package-name": "arg-services-java"
    },
    "src/proto": {
      "release-type": "simple",
      "package-name": "arg-services-proto"
    }
  },
  "plugins": [
    "sentence-case",
    {
      "type": "linked-versions",
      "group-name": "arg-services-group",
      "components": [
        "arg-services-python",
        "arg-services-typescript",
        "arg-services-java",
        "arg-services-proto"
      ]
    }
  ]
}
