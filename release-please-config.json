{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    "src/python": {
      "release-type": "python",
      "package-name": "py"
    },
    "src/typescript": {
      "release-type": "node",
      "package-name": "ts"
    },
    "src/java": {
      "skip-snapshot": true,
      "release-type": "maven",
      "package-name": "java"
    },
    "proto": {
      "release-type": "simple",
      "package-name": "pb"
    },
    ".": {
      "release-type": "simple",
      "package-name": "arg-services",
      "include-component-in-tag": false
    }
  },
  "plugins": [
    "sentence-case",
    {
      "type": "linked-versions",
      "groupName": "repository",
      "components": ["arg-services", "py", "ts", "java", "pb"]
    }
  ]
}
